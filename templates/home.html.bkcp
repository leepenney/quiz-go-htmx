<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Home</title>
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.min.css">
        <script src="https://unpkg.com/htmx.org@1.9.9"></script>
    </head>

    <body>

        <main class="container">
            <h1>Films</h1>

            <div class="grid">
                <div>
                    <ul id="film-list">
                    {{ range .Films }}
                        {{ block "film-list-element" .}}
                            <li>{{ .Title }} <i>dir.</i> {{ .Director }}</li>
                        {{ end }}
                    {{ end }}
                    </ul>

                    {{ range .Questions }}
                        {{ block "quiz-question" .}}
                            <h3>{{ .Question }}</h3>
                            <ul>
                                {{ range .Answers }}
                                    <li>{{ .String }}</li>
                                {{ end }}
                            </ul>
                        {{ end }}
                    {{ end }}

                </div>

                <div>
                    <h3>Add Film</h3>

                    <form hx-post="/add-film/" hx-target="#film-list" hx-swap="beforeend" hx-indicator="#loading">

                        <label for="film-title">Title</label>
                        <input type="text" name="title" id="film-title">

                        <label for="film-director">Director</label>
                        <input type="text" name="director" id="film-director">

                        <div>
                            <button type="submit">Add</button>
                            <span id="loading" aria-busy="true" class="htmx-indicator"></span>
                        </div>

                    </form>
                </div>
            </div>
        </main>

    </body>
</html> 